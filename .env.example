# ============================================================================
# MVP RAG Local - Configuracao
# ============================================================================
#
# Instrucoes:
# 1. Copie este arquivo para .env na raiz do projeto
# 2. Preencha GOOGLE_API_KEY com sua chave
# 3. NUNCA commite o arquivo .env!
#

# ============================================================================
# GOOGLE GEMINI (OBRIGATORIO)
# ============================================================================

# API Key do Google AI Studio (https://aistudio.google.com/apikey)
GOOGLE_API_KEY=COLE_SUA_KEY_AQUI

# Modelo Gemini para analise de video
GEMINI_MODEL=gemini-2.5-flash-preview-05-20

# Modelo de embeddings
EMBEDDING_MODEL=text-embedding-004
EMBEDDING_DIMENSIONS=768

# ============================================================================
# POSTGRESQL
# ============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=video_assets
POSTGRES_USER=curator
POSTGRES_PASSWORD=curator_pass_2026

# ============================================================================
# QDRANT (Vector Database)
# ============================================================================

QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=videos

# ============================================================================
# UPLOAD
# ============================================================================

UPLOAD_DIR=./uploads
MAX_VIDEO_SIZE_MB=500
